            "in": "body",
            "name": "customer",
            "description": "customer",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CustomerInfo"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/CustomerResponse"
            }
          },
          "400": {
